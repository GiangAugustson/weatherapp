<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox fx:controller="weatherApp.WeatherController"
	  xmlns:fx="http://javafx.com/fxml"
	  alignment="center" spacing="10">

	<Label text="City"/>
	<TextField fx:id="city" maxWidth="150"/>
	<Label text="State"/>
	<TextField fx:id="state" maxWidth="150"/>

	<Button fx:id="save" text="Save"
			onAction="#handleButton"/>
</HBox>